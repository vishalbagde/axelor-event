<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.1.xsd">

  <grid name="event-grid" model="com.axelor.event.db.Event" title="Event">
    <field name="reference" />
    <field name="startDate" />
    <field name="endDate" />
    <field name="venue" />
    <field name="regOpenDate" />
    <field name="regCloseDate" />
    <field name="capacity" />
    <field name="eventFees" />
    <field name="description" />
    <field name="totalEntry" />
    <field name="amountCollected" />
    <field name="totalDiscount" />
  </grid>

  <form model="com.axelor.event.db.Event" title="Event" name="event-form"
    width="large" onLoad="action-event-method-on-change-verify-event,save" >
    <toolbar>
      <button name="eventRegImportBtn" title="Import registration"
        showIf="id" onClick="action-event-view-import-event-registration" />

      <button name="emailSendBtn" title="Email Send" showIf="id"
        onClick="action-event-method-on-click-send-email" />

      <button name="reportBtn" title="Report" showIf="id"
        onClick="action-event-report-on-click-generate-report" />

    </toolbar>
    <panel name="overviewPanel">
      <field name="reference" />
      <field name="venue" />
      <field name="startDate" onChange="action-event-condition-on-change-check-date" />
      <field name="endDate" onChange="action-event-condition-on-change-check-date" />
      <field name="regOpenDate" onChange="action-event-condition-on-change-check-date" />
      <field name="regCloseDate" onChange="action-event-condition-on-change-check-date" />
      <field name="capacity" />
      <field name="eventFees" onChange="action-event-method-on-change-verify-event" />
    </panel>

    <panel name="discountPanel">
      <panel-related field="discountList" form-view="discount-form"
        grid-view="discount-grid" colSpan="12" />
    </panel>

    <panel name="eventRegPenel">
      <panel-related field="eventRegistrationList" colSpan="12"
        form-view="event-registration-form" grid-view="event-registration-grid"
        onChange="action-event-method-on-change-compute-event-total" />
    </panel>

    <panel name="descPanel" colSpan="12">
      <field name="description" colSpan="12" height="8" widget="html" />
    </panel>

    <panel name="eventPanel" sidebar="true" title="Event Details"
      itemSpan="6">
      <field name="totalEntry" readonly="true" colSpan="12" />
      <field name="amountCollected" readonly="true" colSpan="12" />
      <field name="totalDiscount" readonly="true" colSpan="12" />
    </panel>
  </form>

  <cards name="event-card" model="com.axelor.event.db.Event" title="Event" width="400px">
    <field name="reference" />
    <field name="startDate" />
    <field name="endDate" />
    <field name="venue" />
    <field name="regOpenDate" />
    <field name="regCloseDate" />
    <field name="capacity" />
    <field name="eventFees" />
    <field name="description" />
    <field name="totalEntry" />
    <field name="amountCollected" />
    <field name="totalDiscount" />
    <template>
      <![CDATA[
        <div span="12">
         <h4> <span class="label label-info pull-right"> {{startDate | date:'dd-MM-yyyy'}} - {{endDate | date:'dd-MM-yyyy'}}</span> </h4>
         <h4 class="text-primary"><strong>{{reference}}</strong></h4>
        
          <div span="4">
            <b class="text-info">Venue :</b> {{venue.fullName}}<br>
            <b class="text-info">Event Fees :</b> {{eventFees}}<br>
            <b class="text-info">Total Entry:</b> {{totalEntry}}<br>
            <b>Registration Date From :
            <span> {{regOpenDate | date:'dd-MM-yyyy'}} TO {{regCloseDate | date:'dd-MM-yyyy'}}</span>
            </b>
          </div>
        </div>
      ]]>
    </template>
  </cards>

  <calendar name="event-calendar" title="Event"
    model="com.axelor.event.db.Event" colorBy="reference" eventStart="startDate"
    eventStop="endDate" eventLength="1">
    <field name="reference" />
    <field name="venue" />
  </calendar>


  <form name="import-registration-form" title="Import Registration"
    model="com.axelor.event.db.Event" >
    <panel name="mainPanel">
      <field name="metaFile" title="Input file" type="many-to-one"
        target="com.axelor.meta.db.MetaFile" widget="binary-link" />
      <button name="importBtn" colSpan="4" title="Import"
        readonlyIf="metaFile == null" onClick="action-event-method-on-click-import-registration" />
    </panel>
  </form>

  <action-view name="action-event-view-import-event-registration"
    title="Import Registration" model="com.axelor.event.db.Event">
    <view type="form" name="import-registration-form" />
    <view-param name="width" value="800"/>
      <view-param name="popup" value="true"/>
      	<view-param name="show-toolbar" value="false"/>
      <view-param name="show-confirm" value="false"/>
      <view-param name="popup-save" value="false"/>
  </action-view>
  <action-method name="action-event-method-on-click-import-registration">
    <call class="com.axelor.event.web.EventEventController" method="importCsvEventRegistration" />
  </action-method>




  <action-condition name="action-event-condition-on-change-check-date">

    <check field="startDate" if="endDate !=null &amp;&amp; startDate &gt; endDate"
      error="Start Date didn't After End Date" />

    <check field="endDate"
      if="startDate !=null &amp;&amp; endDate !=null &amp;&amp;  endDate &lt; startDate"
      error="End Date didn't Before Start Date" />

    <check field="regOpenDate"
      if="regCloseDate !=null &amp;&amp; regOpenDate &gt; startDate.toLocalDate() || regOpenDate !=null &amp;&amp; regOpenDate &gt; regCloseDate"
      error="Registration Start Date didn't After Start Date or not after Registration End Date" />

    <check field="regCloseDate"
      if="regOpenDate !=null &amp;&amp; regCloseDate !=null &amp;&amp; regCloseDate &gt; startDate.toLocalDate()  || regOpenDate !=null &amp;&amp; regCloseDate !=null &amp;&amp; regCloseDate &lt; regOpenDate"
      error="Registration Close Date didn't After End Date or not Before Reg Start Date" />
  </action-condition>


  <action-method name="action-event-method-on-change-compute-event-total">
    <call class="com.axelor.event.web.EventEventController" method="computeTotal" />
  </action-method>

  <action-method name="action-event-method-on-change-verify-event">
    <call class="com.axelor.event.web.EventEventController" method="verifyEvent" />
  </action-method>

  <action-method name="action-event-method-on-click-send-email">
    <call class="com.axelor.event.web.EventEventController" method="emailSend" />
  </action-method>




  <action-report output="${date}${time}"
    name="action-event-report-on-click-generate-report" design="event_report.rptdesign">
    <param name="eventId" expr="eval: id" />
  </action-report>


</object-views>
