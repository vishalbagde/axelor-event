	<action-condition name="action-event-condition-on-change-check-date">

		<check field="startDate" if="endDate !=null &amp;&amp; startDate &gt; endDate"
			error="Start Date didn't After End Date" />

		<check field="endDate"
			if="startDate !=null &amp;&amp; endDate !=null &amp;&amp;  endDate &lt; startDate"
			error="End Date didn't Before Start Date" />

		<check field="regOpenDate"
			if="regCloseDate !=null &amp;&amp; regOpenDate &gt; startDate.toLocalDate() || regOpenDate !=null &amp;&amp; regOpenDate &gt; regCloseDate"
			error="Registration Start Date didn't After Start Date or not after Registration End Date" />

		<check field="regCloseDate"
			if="regOpenDate !=null &amp;&amp; regCloseDate &gt; startDate.toLocalDate()  || regOpenDate !=null &amp;&amp; regCloseDate &lt; regOpenDate"
			error="Registration Close Date didn't After End Date or not Before Reg Start Date" />
	</action-condition>


	<action-method name="action-event-method-on-change-compute-event-total">
		<call class="com.axelor.event.web.EventEventController" method="computeTotal" />
	</action-method>

	<action-method name="action-event-method-on-change-verify-event">
		<call class="com.axelor.event.web.EventEventController" method="verifyEvent" />
	</action-method>

</object-views>
